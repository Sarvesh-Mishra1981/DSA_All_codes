#include<iostream>
using namespace std;
incude<vector>

class Solution {
public:
    bool isValid(vector<int>& weights, int days,int maxi){
        int st=1,packages=0;
        for(int i=0;i<weights.size();i++){
            if(maxi<weights[i]) return false;
            if(packages+weights[i]<=maxi){
                packages+=weights[i];
            }
            else {
                st++;
                packages=weights[i];
            }
        }
        return (st<=days);


    }
    int shipWithinDays(vector<int>& weights, int days) {
        int n=weights.size();
        int sum=0;
        for(int i=0;i<n;i++){
            sum+=weights[i];
        }
        int ans=-1;
        int st=0,end=sum;
        while(st<=end){
            int mid=st+(end-st)/2;
            if(isValid(weights,days,mid)){
                ans=mid;
                end=mid-1;
            }
            else {
                st=mid+1;
            }
        }
        return ans;
    }
};
